<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/color_00a8ff" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/color_ffd664" />
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>
</layer-list>