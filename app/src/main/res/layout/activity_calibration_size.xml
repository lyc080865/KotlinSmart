<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calibration_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp">


        <lpt.smart.pen.view.MediumTextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/blue_big_radius_bg"
            android:paddingLeft="55dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="选择和纸上大小、粗细最接近的字吧！"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calibration_icon" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/item_write_bg_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_size_bg" />

            <com.ewrite.ewrite_sdk.widget.WriteDrawView
                android:id="@+id/item_write_view_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/write_view_bg" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_write_bg_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_size_bg" />

            <com.ewrite.ewrite_sdk.widget.WriteDrawView
                android:id="@+id/item_write_view_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/write_view_bg" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_write_bg_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_size_bg" />

            <com.ewrite.ewrite_sdk.widget.WriteDrawView
                android:id="@+id/item_write_view_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/write_view_bg" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_write_bg_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_size_bg" />

            <com.ewrite.ewrite_sdk.widget.WriteDrawView
                android:id="@+id/item_write_view_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/write_view_bg" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/item_write_bg_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_size_bg" />

            <com.ewrite.ewrite_sdk.widget.WriteDrawView
                android:id="@+id/item_write_view_5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/write_view_bg" />

        </FrameLayout>

    </LinearLayout>

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/calibration_sure_text"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/calibartion_blue_bg"
        android:text="确认"
        android:textSize="16sp" />

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/calibration_rewrite"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/calibration_orange"
        android:text="上一步"
        android:textSize="16sp" />

</RelativeLayout>