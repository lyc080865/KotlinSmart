<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:onClick="backFish"
        android:src="@drawable/icon_common_back"/>

    <lpt.smart.pen.view.MediumTextView
        style="@style/text"
        android:padding="15dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher_round" />

        <lpt.smart.pen.view.MyEditText
            android:id="@+id/login_phone_edit"
            style="@style/edit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            android:hint="请输入手机号"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <lpt.smart.pen.view.MyEditText
                android:id="@+id/login_code_edit"
                style="@style/edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/edit_bg"
                android:hint="请输入验证码"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="15dp" />

            <lpt.smart.pen.view.MediumTextView
                android:id="@+id/login_get_code_btn"
                style="@style/btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_verify_code_btn"
                android:text="获取验证码"
                android:textColor="@color/verify_code_btn_color" />
        </LinearLayout>

        <lpt.smart.pen.view.MediumTextView
            android:id="@+id/login_login_btn"
            style="@style/btn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:text="立即登录" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox_bg" />

            <lpt.smart.pen.view.MediumTextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:text="您已阅读"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <lpt.smart.pen.view.MediumTextView
                android:id="@+id/login_service_btn"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:gravity="center_vertical"
                android:text="《用户协议》"
                android:textColor="@color/orange_color"
                android:textSize="12sp" />


            <lpt.smart.pen.view.MediumTextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:text="和"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <lpt.smart.pen.view.MediumTextView
                android:id="@+id/login_protocol_btn"
                style="@style/text"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:text="《隐私政策》"
                android:textColor="@color/orange_color"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>


</FrameLayout>