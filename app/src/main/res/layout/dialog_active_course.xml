<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/cl_content"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:clipChildren="false">

        <lpt.smart.pen.view.MediumTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="输入激活码"
            android:textColor="@color/color_885400"
            android:textSize="20sp" />

        <lpt.smart.pen.view.MyEditText
            android:id="@+id/edt_code"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_bg"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:paddingStart="20dp"
            android:singleLine="true" />

        <lpt.smart.pen.view.MediumTextView
            android:id="@+id/tv_sure"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/edt_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_modify_phone_btn"
            android:enabled="true"
            android:gravity="center"
            android:text="确认激活"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/dialog_dismiss"
            android:translationY="-25dp"
            app:layout_editor_absoluteY="-25dp" />

    </RelativeLayout>

</RelativeLayout>