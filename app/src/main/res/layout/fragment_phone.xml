<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/bg_user_fragment_common">

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_885400"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="139****4952" />

    <lpt.smart.pen.view.MediumTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机："
        android:textColor="@color/color_885400"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone"
        app:layout_constraintRight_toLeftOf="@id/tv_phone"
        app:layout_constraintTop_toTopOf="@id/tv_phone" />

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/tv_modify"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_modify_nickname_btn"
        android:gravity="center"
        android:text="修改"
        android:textColor="@color/color_885400"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone"
        app:layout_constraintLeft_toRightOf="@id/tv_phone"
        app:layout_constraintTop_toTopOf="@id/tv_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>