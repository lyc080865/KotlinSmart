<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_video_class_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2000000"
    android:clickable="true">

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/ll_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/icon_video_replay"
        android:drawablePadding="20dp"
        android:gravity="center_horizontal"
        android:text="重播"
        android:textColor="@color/color_ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/ll_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="50dp"
        android:drawableTop="@drawable/yellow_close_img"
        android:drawablePadding="20dp"
        android:gravity="center_horizontal"
        android:text="退出"
        android:textColor="@color/color_ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_replay"
        app:layout_constraintTop_toTopOf="parent" />

    <lpt.smart.pen.view.MediumTextView
        android:id="@+id/ll_go_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:drawableTop="@drawable/blue_next_img"
        android:drawablePadding="20dp"
        android:gravity="center_horizontal"
        android:text="边看边学"
        android:textColor="@color/color_ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_replay"
        app:layout_constraintTop_toTopOf="parent" />

    <lpt.smart.pen.view.FingerImageView
        android:id="@+id/home_finger_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>