<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.ewrite.ewrite_sdk.dialog.choosecolordialog.EwriteColorGroup
        android:id="@+id/cg_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:checkedButton="@+id/cr_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.ewrite.ewrite_sdk.dialog.choosecolordialog.EwriteColorRadio
            android:id="@+id/cr_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:image_color="@color/image_color_333"
            app:image_stroke_color="@color/image_color_333" />
    </com.ewrite.ewrite_sdk.dialog.choosecolordialog.EwriteColorGroup>
</RelativeLayout>
